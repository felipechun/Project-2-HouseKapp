<div class="container mb-4 mt-5">
  <div class="row h-100">
    <div class="col-lg-6 col-md-9 col-sm-12 my-auto">
      <h1 class="text-wrap black-text"><b>Sign up</b></h1>
    </div>
  </div>
</div>
<div class="container mb-4 mt-3">
  <div class="row h-100">
    <div class="col-lg-6 col-md-9 col-sm-12 my-auto">
      <form action="/signup/{{groupId}}" method="POST" enctype="multipart/form-data"> <!-- fill in invite-signup POST route -->
        <div class="form-group">
          <input type="text" name="name" class="form-control" placeholder="Name">
        </div>
        <div class="form-group">
          <input type="email" name="username" class="form-control" value="{{email}}">
        </div>
        <div class="form-group">
          <input type="password" name="password" class="form-control" placeholder="Password">
        </div>
        <div class="form-group">
          <input type="password" name="confirmPassword" class="form-control" placeholder="Confirm Password">
        </div>
        <div class="form-group">
          <label for="profile-pic" class="text-muted pl-2">Profile picture </label>
          <input type="file" name="avatar" class="">
        </div>
        <input type="text" name="groupId" value="{{groupId}}" hidden="true">
        <button type="submit" class="btn btn-success">Sign up</button>
        {{#if message}}
          <p>{{message}}</p>
        {{/if}}
      </form>
    </div>
  </div>
</div>