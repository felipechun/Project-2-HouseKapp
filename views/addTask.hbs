<form action="/create/task" method="POST">
  <!--FILL IN ADD TASK POST ROUTE-->
  <div class="form-group">
    <input type="text" name="name" class="form-control" placeholder="Task name" required>
  </div>
  <div class="form-group">
    <input type="date" name="date" class="form-control" placeholder="Date">
  </div>
  <div class="form-group">
    <input type="number" name="value" step="0.01" class="form-control" placeholder="Cost">
  </div>
  <div id="who-id" class="form-group">
    <label>Who did it</label>
    {{#each group.people}}
    <input type="checkbox" name="paidBy" value="{{_id}}">{{name}}</option>
    {{/each }}
    <br><br>
    <label>Who owes? </label>
    {{#each group.people}}
    <input type="checkbox" name="whoOwes" value="{{_id}}">{{name}}</option>
    {{/each }}
  </div>
  <button type="submit" class="btn btn-success">Add</button>
</form>
